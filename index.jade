doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    title A Brief Introduction To This Game
    script(src='ui.coffee')
    style
      :stylus
        @font-face
          font-family Bitter
          src url(fonts/Bitter-Regular.woff)
        @font-face
          font-family Bitter
          font-style italic
          src url(fonts/Bitter-Italic.woff)
        @font-face
          font-family Quicksand
          src url(fonts/Quicksand-Regular.woff)
        body
          font-family Bitter, serif
          line-height 1.6
          margin 1em
          background-color #def
        h1, h2
          font-family Quicksand, sans-serif
          font-weight normal
        a[href]
          text-decoration inherit
          color inherit
        .pane
          max-width 40em
        p, .answers
          margin-top 1em
          margin-bottom 0
        .answer
          padding-left 1.15em
          text-indent -1.15em
        .a-prefix
          display inline-block
          min-width 1.15em
          padding-left 0
          text-indent 0
        .frontmatter
          font-style italic
        .redacted
          background-color black
        .cursor
          display inline-block
          width 0.7em
          height 1.2em
          animation blink 2s linear infinite
        @keyframes blink
          25%, 50%
            background-color black
        .question iframe
          display block
          margin 1em 0
          background-color white

  body
    #home-pane.pane.enter-key
      h1 A Brief Introduction To This Game

      .frontmatter
        .author by #[span.redacted REDACTED]
        .copyright &copy; 2016
        .serial s/n #{new Date().getTime().toString().replace(/(.{5})(...)/, '$1-$2-')}-6/12ðŸ˜¹

      :marked
        [Press Enter or click here to begin.](#!)

      .cursor

    #loading(style='display: none;')
      :marked
        Loading....

    #404-pane.pane.enter-key(style='display: none;')
      :marked
        ## Page Not Found

        *Quoth the Raven, &ldquo;404.&rdquo;*

        [Press Backspace or click here to go back to the previous page.](javascript:history.back%28%29)<br>[Press Enter or click here to start over.](#)

      .cursor

    #questions.pane(style='display: none;')
      #question-container
      #end
        :marked
          [Click here to start over.](#)
        .cursor
